{
  "name": "tailwindcss-html-boilerplate",
  "version": "1.0.0",
  "description": "This is a tailwindcss boilerplate for html pages",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss build ./src/css/styles.css -o ./public/css/styles.css",
    "prod": "cross-env NODE_ENV=production postcss build ./src/css/styles.css -o ./public/css/styles.css",
    "watch": "onchange \"tailwind.config.js\" \"src/**/*.css\" -- npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielotieno/tailwindcss-html-boilerplate.git"
  },
  "author": "Daniel Otieno",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielotieno/tailwindcss-html-boilerplate/issues"
  },
  "homepage": "https://github.com/danielotieno/tailwindcss-html-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "onchange": "^7.1.0",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3"
  }
}
